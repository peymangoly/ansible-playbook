  - name: SET NTP
    hosts: ubuntu
    tasks:

    - name: SET NTP
      shell: |
           timedatectl set-timezone Asia/Tehran
           apt update
           apt install chrony -y
           systemctl start chronyd
           chronyc activity
           chronyc sourcestats -v
           sed -i 's/pool ntp.ubuntu.com        iburst maxsources 4/#pool ntp.ubuntu.com        iburst maxsources 4/g' /etc/chrony/chrony.conf
           sed -i 's/pool 0.ubuntu.pool.ntp.org iburst maxsources 1/#pool 0.ubuntu.pool.ntp.org iburst maxsources 1/g' //etc/chrony/chrony.conf
           sed -i 's/pool 1.ubuntu.pool.ntp.org iburst maxsources 1/#pool 1.ubuntu.pool.ntp.org iburst maxsources 1/g' /etc/chrony/chrony.conf
           sed -i 's/pool 2.ubuntu.pool.ntp.org iburst maxsources 2/#pool 2.ubuntu.pool.ntp.org iburst maxsources 2/g' /etc/chrony/chrony.conf
           sed -i '21 a\server 172.25.5.22 iburst' /etc/chrony/chrony.conf
           sed -i '22 a\server 192.168.115.150 iburst' /etc/chrony/chrony.conf
           timedatectl set-ntp true
           systemctl restart chronyd
           systemctl enable chronyd
           timedatectl

      register: usercmd
      tags: usercmd

    - debug: msg="{{usercmd.stdout}}"
